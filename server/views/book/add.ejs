<%- include('../partials/header.ejs') %>

<!--Main Nav-->
<%- include('../partials/main_nav.ejs') %>

<!--Content for Add page-->

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>

        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Book Titile</label>
                <input type="text" class="form-control " id="nameTextField" placeholder="Enter the Book Title" name="name" required>
            </div>

            <div class="form-group">
                <label for="authorTextField">Author</label>
                <input type="text" class="form-control " id="authorTextField" placeholder="Enter the Book Author" name="author" required>
            </div>

            <div class="form-group">
                <label for="publishedTextField">Year</label>
                <input type="number" class="form-control " id="publishedTextField" placeholder="Enter the Year of Publication" name="published" required>
            </div>

            <div class="form-group">
                <label for="descriptionTextField">Description</label>
                <input type="text" class="form-control " id="descriptionTextField" placeholder="Brief description" name="description" required>
            </div>

            <div class="form-group">
                <label for="priceTextField">Price</label>
                <input type="text" class="form-control " id="priceTextField" placeholder="Book price" name="price" required>
            </div>
            
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit </button>

            <a href="/book-list" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel </a>

        </form>
    </div>
    </div>
</div>

<!--Footer-->
<footer>
    <%- include('../partials/bottom_nav.ejs') %> 
</footer>
    
<!--Javascript Section-->
<%- include('../partials/scripts.ejs') %>